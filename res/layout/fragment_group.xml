<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_person"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_background_opentenure"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="top"
        android:background="@color/light_background_opentenure"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/first_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/first_name_label" />

        <EditText
            android:id="@+id/first_name_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:hint="@string/group_name"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/date_of_establishment_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:gravity="bottom"
            android:text="@string/date_of_establishment_label" />

        <EditText
            android:id="@+id/date_of_establishment_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:hint="@string/date_of_establishment_label"
            android:inputType="date" >
        </EditText>

        <TextView
            android:id="@+id/id_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:gravity="bottom"
            android:text="@string/id_number" />

        <EditText
            android:id="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:ems="10"
            android:hint="@string/id_number"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/postal_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:gravity="bottom"
            android:text="@string/postal_address" />

        <EditText
            android:id="@+id/postal_address_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:hint="@string/postal_address"
            android:inputType="textPostalAddress" >
        </EditText>

        <TextView
            android:id="@+id/email_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.72"
            android:gravity="bottom"
            android:text="@string/email_address" />

        <EditText
            android:id="@+id/email_address_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress" >
        </EditText>

        <TextView
            android:id="@+id/mobile_phone_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:gravity="bottom"
            android:text="@string/mobile_phone_number" />

        <EditText
            android:id="@+id/mobile_phone_number_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:hint="@string/mobile_phone_number"
            android:inputType="phone" >
        </EditText>

        <TextView
            android:id="@+id/contact_phone_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:gravity="bottom"
            android:text="@string/contact_phone_number" />

        <EditText
            android:id="@+id/contact_phone_number_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@color/dark_background_opentenure"
            android:hint="@string/contact_phone_number"
            android:inputType="phone" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/light_background_opentenure"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/claimant_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:adjustViewBounds="true"
            android:contentDescription="@string/claimant_picture"
            android:src="@drawable/ic_contact_picture" />
    </LinearLayout>

</LinearLayout>